<Window x:Class="NSDMasterInventorySF.StyleChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Style Chooser" Height="400" Width="400" Loaded="OnLoaded">
    <DockPanel Margin="10">
        <Button x:Name="SelectButton" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Width="100" Content="Select"
                Click="ButtonBase_OnClick" />
        <ListBox x:Name="StylesListBox" Margin="10" SelectionMode="Single" SelectionChanged="StylesListBox_OnSelectionChanged" />
    </DockPanel>
</Window>