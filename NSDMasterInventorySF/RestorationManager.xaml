<Window x:Class="NSDMasterInventorySF.RestorationManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Restoration Manager" Height="300" Width="350">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Margin="10,10,10,10" VerticalAlignment="Center">
            <Button FontSize="16" Content="Restore" IsEnabled="True" Margin="0,0,0,0" Click="OnRestoreButtonClicked" x:Name="RestoreButton" />
        </StackPanel>
        <ListBox x:Name="SheetListBox" SelectionMode="Single" DockPanel.Dock="Right" SelectionChanged="SheetListBox_OnSelectionChanged"
                 Margin="10,10,10,10" />
    </DockPanel>
</Window>
